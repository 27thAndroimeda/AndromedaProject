<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ProfileDetailActivity">

    <ImageView
        android:id="@+id/imageview_profile_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/textview_name_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/imageview_profile_detail"
        app:layout_constraintStart_toStartOf="@id/imageview_profile_detail"
        app:layout_constraintEnd_toEndOf="@id/imageview_profile_detail"/>

    <TextView
        android:id="@+id/textview_description_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Description"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/textview_name_detail"
        app:layout_constraintStart_toStartOf="@id/textview_name_detail"
        app:layout_constraintEnd_toEndOf="@id/textview_name_detail"/>



</androidx.constraintlayout.widget.ConstraintLayout>