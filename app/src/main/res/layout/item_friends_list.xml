<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageview_github_user"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:shapeAppearanceOverlay="@style/circleImageView"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textview_github_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_baedal"
        android:text="Friend's Name"
        android:textSize="17sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/imageview_github_user"
        app:layout_constraintStart_toEndOf="@id/imageview_github_user"
        app:layout_constraintTop_toTopOf="@id/imageview_github_user"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textview_github_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_baedal"
        android:text="User ID"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/textview_github_name"
        app:layout_constraintTop_toBottomOf="@id/textview_github_name"/>


</androidx.constraintlayout.widget.ConstraintLayout>